@model  Academy.Core.ViewModels.StudentViewModel  
@{
    ViewBag.Title = "Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Students</h2>
@Html.ActionLink("Create New ", "New", "Students", null, new { @class = "btn btn-primary pull-right" })


@using (Html.BeginForm("Search", "Students"))
{
    <div class="form-group">
        <div id="searchStudents" class="input-group">
            @Html.TextBoxFor(m=>m.SearchTerm,new {@class="form-control"})
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-search"></i>
            </span>
        </div>
    </div>
}


@if (!Model.Students.Any())
{
    <p>No Stdents Found</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Name</th>
            <th>Collage</th>
            <th>Date of birth</th>
            <th>Mobile</th>
            <th>Graduation Year</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var student in Model.Students)
        {
            <tr>
                <td>
                    @Html.ActionLink(student.FullName, "Edit", "Students", new { id = student.Id },null)   
                </td>
                <td>
                    @student.Collage.Name
                </td>
                <td>
                    @student.BirthDate.ToString("d")
                </td>
                <td>
                    @student.Mobile1
                </td>
                <td>
                    @student.GraduationYear
                </td>
            </tr>
        }
        </tbody>
    </table>
}
